
<!-- views/home.ejs -->
<html>
<head>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Custom CSS for the home page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh; /* Full viewport height */
            background-image: url('/images/download1.jpg'); /* Replace with your music-themed background */
            background-size: cover;
            background-position: center;
            color: #fff;
            text-align: center;
        }

        .header {
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background for header */
            width: 100%;
            padding: 10px 0;
            position: fixed; /* Fixed position to stay on top */
            top: 0;
            z-index: 1000; /* Ensure it's above other content */
        }

        .header h1 {
            margin: 0;
            font-size: 2em;
        }

        .navigation {
            position: fixed; /* Fixed position for navigation */
            top: 50px; /* Space below header */
            left: 0;
            width: 250px; /* Width of the sidebar */
            background-color: #333;
            height: calc(100vh - 50px); /* Full height minus header */
            overflow-y: auto; /* Enable scrolling if content exceeds height */
            padding-top: 20px;
            z-index: 999; /* Ensure it's above main content */
        }

        .navigation ul {
            list-style-type: none;
            padding: 0;
            text-align: left;
        }

        .navigation ul li {
            margin-bottom: 10px;
        }

        .navigation ul li a {
            display: block;
            color: #fff;
            text-decoration: none;
            padding: 10px;
        }

        .navigation ul li a:hover {
            background-color: #555;
        }

        .dropdown-content {
            display: none;
            background-color: #333;
            position: absolute;
            min-width: 200px;
            z-index: 1;
        }

        .dropdown-content a {
            color: #fff;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        @media screen and (max-width: 768px) {
            .navigation {
                width: 100%; /* Full width on small screens */
                height: auto;
                position: relative;
                top: 0;
            }

            .header {
                position: static;
            }
        }
    </style>
    <title>Home</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Welcome, <%= user.username %></h1>
        </div>

        <div class="navigation">
            <ul>
                <li><a href="/home">Home</a></li>
                <li class="dropdown">
                    <a href="#" class="dropbtn">Music & Podcasts</a>
                    <div class="dropdown-content">
                        <a href="/music">Music</a>
                        <a href="/podcasts">Podcasts</a>
                    </div>
                </li>
                <li><a href="/search">Search</a></li>
                <li><a href="/library">Library</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </div>

    <script src="/scripts.js"></script>
</body>
</html>
